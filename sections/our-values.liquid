<section class="section" data-section-id="{{ section.id }}" data-section-type="our-values">
    
    <div class="container">
        <header class="section__header">
            <h2 class="section__title heading h3" >{{ section.settings.title }}</h2>
        </header>
        <header class="section__header">
        <p> {{ section.settings.description }} </p>
        </header>
    </div>

    <div class="container">
        <div class="our-values-row">
            <div class="our-values-column">
                <div class="our-values-column-content-wrapper">
                    <div class="our-values-column-image">
                        <img loading=lazy
                            src="{{ section.settings.image_value_1 | img_url: '300x' }}"
                            alt="{{ section.settings.image_value_1.alt | escape }}"
                            width="300"
                            height="300"
                        >
                    </div>
                    <div class="our-values-column-text">
                        <div class="our-values-column-title">
                            {{ section.settings.title_value_1 }}
                        </div>
                        <div class="our-values-column-desc">
                            {{ section.settings.desc_value_1 }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="our-values-column">
                <div class="our-values-column-content-wrapper">
                    <div class="our-values-column-image">
                        <img loading=lazy
                            src="{{ section.settings.image_value_2 | img_url: '300x' }}"
                            alt="{{ section.settings.image_value_2.alt | escape }}"
                            width="300"
                            height="300"
                        >
                    </div>
                    <div class="our-values-column-text">
                        <div class="our-values-column-title">
                            {{ section.settings.title_value_2 }}
                        </div>
                        <div class="our-values-column-desc">
                            {{ section.settings.desc_value_2 }}
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="our-values-column">
                <div class="our-values-column-content-wrapper">
                    <div class="our-values-column-image">
                        <img loading=lazy
                            src="{{ section.settings.image_value_3 | img_url: '300x' }}"
                            alt="{{ section.settings.image_value_3.alt | escape }}"
                            width="300"
                            height="300"
                        >
                    </div>
                    <div class="our-values-column-text">
                        <div class="our-values-column-title">
                            {{ section.settings.title_value_3 }}
                        </div>
                        <div class="our-values-column-desc">
                            {{ section.settings.desc_value_3 }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

  </section>
  
