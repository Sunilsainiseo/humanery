        {
            "type": "text",
            "id": "description",
            "label": "Description for Section",
            "default": "Our Values Description"
        },
        {
            "type": "image_picker",
            "id": "image_value_1",
            "label": "Image for Value 1",
            "info": "600 x 600 .jpg recommended"
